app_mode = production

[server]
protocol = http
http_addr = 127.0.0.1
http_port = 3000
domain = {{ grafana.domain }}
root_url = https://{{ grafana.domain }}/
serve_from_sub_path = false

[database]
type = sqlite3
path = grafana.db

[datasources]
;datasource_limit = 5000

[remote_cache]
type = database

[auth]
disable_login_form = true

[auth.anonymous]
enabled = true
org_role = Admin

[log]
mode = console file
level = warn

[analytics]
reporting_enabled = false
check_for_updates = false
